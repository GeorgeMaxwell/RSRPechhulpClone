<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        app:layout_anchor="@+id/image_main_bg"
        app:layout_anchorGravity="bottom|center"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/call_rates_title"
            android:text="@string/dialog_info_title"
            android:textColor="@android:color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/call_rates"
            android:text="@string/call_rate_information"
            android:textColor="@android:color/white"/>
        <Button
            android:id="@+id/call_btn"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="@string/call_button"
            android:textColor="@android:color/white"
            android:drawableLeft="@drawable/main_btn_phone"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            android:drawablePadding="2dip"
            app:layout_anchor="@+id/map"
            app:layout_anchorGravity="bottom|center"/>
    </LinearLayout>



</android.support.design.widget.CoordinatorLayout>
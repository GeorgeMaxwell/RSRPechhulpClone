<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_main_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/image_description"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/main_bg" />

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        app:layout_anchor="@+id/image_main_bg"
        app:layout_anchorGravity="top|center"
        app:popupTheme="@style/AppTheme.PopupOverlay" />

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:theme="@style/AppTheme.AppBarOverlay">

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        app:layout_anchor="@+id/image_main_bg"
        app:layout_anchorGravity="bottom|center"
        android:background="@android:color/holo_blue_dark"
        android:orientation="horizontal">
        <!--ImageView
            android:id="@+id/imageView"

            android:layout_width="30dp"
            android:layout_height="40dp"
            android:src="@drawable/main_btn_warning"
            /-->
        <Button
            android:id="@+id/btn_rsr_pecchulp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@null"
            android:text="@string/btn_rsr_pechhulp"
            android:textColor="@android:color/white"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/main_btn_warning"
            android:drawablePadding="20dip"
            android:paddingLeft="30dip"
            android:paddingRight="26dip"
            app:layout_anchor="@+id/image_main_bg"
            app:layout_anchorGravity="bottom|center"


            />



    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
<!--/android.support.constraint.ConstraintLayout>-->